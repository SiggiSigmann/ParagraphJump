<idea-plugin>
    <id>com.github.siggisigmann.ParagraphJump</id>
    <name>ParagraphJump</name>
    <version>1.0</version>
    <vendor email="tobias.sigmann@gmail.com" url="https://github.com/SiggiSigmann">Tobias Sigmann</vendor>
    <idea-version since-build="213.*"/>
    <description>
        <![CDATA[
        ParagraphJump helps you quickly navigate between paragraphs or logical blocks in your code or text by jumping to the next or previous empty line.
        Use <b>Shift+Control+9</b> to jump to the previous empty line and <b>Shift+Control+0</b> to jump to the next empty line.
        The shortcuts are chosen to avoid conflicts with existing key bindings.
        ]]>
    </description>

    <change-notes>
        <![CDATA[
        <ul>
          <li>1.0 Initial</li>
        </ul>
      ]]>
    </change-notes>
    <depends>com.intellij.modules.platform</depends>
    <depends>org.intellij.scala</depends>

    <actions>
        <action id="ParagraphJump.JumpPrevEmptyLine"
                class="com.github.siggisigmann.paragraphjump.action.jump.Up"
                text="Jump to Previous Empty Line">
            <keyboard-shortcut keymap="$default" first-keystroke="shift control 9"/>
        </action>
        <action id="ParagraphJump.JumpNextEmptyLine"
                class="com.github.siggisigmann.paragraphjump.action.jump.Down"
                text="Jump to Next Empty Line">
            <keyboard-shortcut keymap="$default" first-keystroke="shift control 0"/>
        </action>

        <group id="ParagraphJump.NavigateMenuGroup" text="Paragraph Jump" popup="true">
            <add-to-group group-id="GoToMenu" anchor="last"/>
            <reference ref="ParagraphJump.JumpPrevEmptyLine"/>
            <reference ref="ParagraphJump.JumpNextEmptyLine"/>
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>
</idea-plugin>